@model MEMORY.Models.GameViewModel

@{
    ViewData["Title"] = "Game Page";
}

<h1>Memory Djur</h1>

<h1>Koden för spelet: @Model.Game.RoomCode</h1>	


<p>@(Model.Game.Player2 != null ? "Spelare 2: " + Model.Game.Player2.ToString() : "Väntar på spelare")</p>


<div class="card-grid">
@foreach (Card card in Model.Cards)
{
    string borderColor;

    if (card.IsMatched)
    {
        if (card.PlayerMatchedTo == Model.Game.Player1)
        {
            borderColor = "blue";
        }
        else if (card.PlayerMatchedTo == Model.Game.Player2)
        {
            borderColor = "red";
        }
        else
        {
            borderColor = "gray";
        }
    }
    else
    {
        borderColor = "gray";
    }

    <div class="card" style="border-color:@borderColor;">
        @if (card.IsFlipped)
        {
            <span>@card.CardName</span>
        }
        else
        {
            <a href="@Url.Action("SelectCard", new { gameID = Model.Game.GameID, index = card.Index })">
            <img src="~/images/backing.png" alt="Card back" class="card-back" />
        </a>
        }
    </div>
}
</div>

<style>
/* Brädan */
.board {
    max-width: 100vw;   /* override container */
    max-height: 80vh;              /* fyll nästan hela höjden */
    margin: 20px auto;
    padding: 10px;
    border: 5px solid #444;
    border-radius: 12px;
    background-color: #f0f0f0;

    display: grid;
    place-items: center;
}


/* Grid med 6 kolumner och 3 rader */
.card-grid {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    grid-template-rows: repeat(3, 1fr); 
    gap: 15px;
    width: 100%;
    height: 100%;
}

/* Kort som fyller cellen */
.card {
	aspect-ratio: 1 / 1; /* kvadratiska kort */
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #f9f9f9;
    border: 3px solid gray; 
    border-radius: 8px;
    font-weight: bold;
    font-size: 1rem;
    transition: border-color 0.3s, transform 0.2s;
    cursor: pointer;
}

.card:hover {
    transform: scale(1.05);
}

.card-back {
	width: 100%;
	height: auto;
}

/* Anpassa textelement */
h1 {
	text-align: center;
	color: palevioletred;
	font-family: monospace;
}

p {
	text-align: center;
}

</style>

