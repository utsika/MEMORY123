@{
    ViewData["Title"] = "Logga in";
}

    @model MEMORY.Models.User

    

    <div class="loginpage">
    
    <div class="box">
        <h1>Logga in</h1>
    <form asp-action="Login" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="anvandarLosen">
            <label asp-for="UserName" class="form-label">Användarnamn</label>
            <input asp-for="UserName" class="form-control"  />
        <span asp-validation-for="UserName" class="text-danger"></span>

            
        </div>

        <div class="anvandarLosen">
            <label asp-for="Passwords" class="form-label">Lösenord</label>
            <input asp-for="Passwords" type="password" class="form-control" />
        <span asp-validation-for="Passwords" class="text-danger"></span>

        </div>

        <button type="submit" class="btn-main btn-login">
            Logga in
        </button>

        <div class="signup">
        <a asp-controller="User"
           asp-action="Signup"
               class="btn-main btn-login">
            Skapa konto
        </a>
        </div>
        
    </form>
</div>
</div>
    
