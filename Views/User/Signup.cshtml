@{
    ViewData["Title"] = "Skapa konto";
}

@model MEMORY.Models.User

<div class="box">
    <h1>Skapa ett konto</h1>
<form asp-action="Signup" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="UserName" class="form-label">Användarnamn</label>
        <input asp-for="UserName" class="form-control" />
        <span asp-validation-for="UserName" class="text-danger"></span>


    </div>

    <div class="mb-3">
        <label asp-for="Passwords" class="form-label">Lösenord</label>
        <input asp-for="Passwords" type="password" class="form-control" />
        <span asp-validation-for="Passwords" class="text-danger"></span>

    </div>

    <button type="submit" class="btn-main btn-login">
        Skapa konto
    </button>

    <a asp-controller="User"
       asp-action="Login"
       class="btn-main btn-login">
        Logga in
    </a>
</form>
</div>
<style>
    .container {
        place-items: center;
    }

    .h1, h1 {
        text-align: center;
    }

    .box {
        width: 30vw;
        font-family: monospace;
        align-items: center;
    }

    .btn-main {
        width: 30vw;
        padding: 0.6rem;
        border-radius: 8px;
        text-align: center;
        font-family: monospace;
        cursor: pointer;
        transition: background-color 0.2s ease;
        display: inline-block;
        text-decoration: none;
        margin-top: 8px;
        margin-bottom: 8px;
    }

    .btn-login {
        background-color: #c789b3;
        color: white;
        border: none;
    }

        .btn-login:hover {
            background-color: #8E4B77;
        }

    .btn-signup {
        background-color: white;
        color: #8E4B77;
        border: 2px solid #8E4B77;
    }

        .btn-signup:hover {
            background-color: #8E4B77;
            color: white;
        }

    .anvandarLosen {
        display: flex;
        flex-direction: column;
        margin-bottom: 1rem;
    }
</style>